@{
    ViewData["Title"] = "Ana Sayfa";
}




<!DOCTYPE html>
<html xmlns:th="http://thymeleaf.org">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Güvende Sigorta</title>

    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--CSS-->
    <link href="style.css" rel="stylesheet" type="text/css" />
    <!--Font-->
    <link href="//db.onlinewebfonts.com/c/401746ea18398fb74710226c4250341e?family=Arciform" rel="stylesheet" type="text/css" />
    <!--İcon-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <!-- Recatcha -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    
	<style>
		body {
	    padding: 0;
	    margin: 0;
	    background-color: #F5F7F9;
	    overflow: visible;
	    overflow-x: hidden;
		}
        .container {
            margin-bottom: 50px;
        }
		/*Greeting*/
		#greeting {
		    margin-top: 100px;
		    margin-bottom: 100px;
		    color: #1d1e1e;   
		    text-align:center;
		    font-size: 45px!important;
		}
		#greeting h2 {
		    color: #4e4e4e;
		}
		/*Form*/
		#form {
		    margin-left: 20%;
		}
		/*İnsurances*/
		#insurances {
		    padding: 2px;
		}
		#insurances .icon {
		    position: relative;
		    border-radius: 10px 10px 10px 10px;
		    margin-left: 12%;
		    padding-top: 10px;
		    width: 150px;
		    background-color: #fff;
   		    color: #1d1e1e;
		    align-items: center;
		    text-decoration: none;
		}
		#insurances p {
		    padding: 2px;
		    text-align: center;
		}
		ion-icon {
		    font-size: 64px;
		    padding-left: 25%;
		    position: relative;
		    align-items: center;
		}
		#insurance .icon :hover{
		    color: #728DFF;
		}
		ion-icon :hover{
		    color: #728DFF;
		}
	
	</style>
</head>

<body>

    <!--Greeting-->
	<div id="greeting" class="container">	
	    <div class="row">
	        <div class="col-12">
	        	<h1>GÜVENDE Sigorta'ya Hoş Geldiniz..</h1>
				<h2>Lütfen sigorta sorgulamak için bilgilerinizi aşağıdaki forma giriniz.</h2>
	        </div>

	    </div>
	</div>
	
	<!--Form-->
    <div id="form" class="container">
		<form>			
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label for="first">Ad</label>
                        <input type="text" class="form-control"  id="firstName" name="firstName" required placeholder="">
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="last">Soyad</label>
                        <input type="text" class="form-control"  id="lastName" name="lastName" required placeholder="">
                    </div>
                </div>
                <div class="col-8">
                    <div class="form-group">
                        <label for="last">Şehir</label>
                        <input type="text" class="form-control"  id="city" name="city" required placeholder="">
                    </div>
                </div>                
                <div class="col-8">
                    <div class="form-group">
                        <label for="company">TC Kimlik Numarası</label>
                        <input type="text" class="form-control" id="Id" name="Id" autocomplete="off" pattern="[0-9]{11}" title="11 Basamaklı TC kimlik numaranızı girmelisiniz" required placeholder="">
                    </div>


                </div>
                <div class="col-8">

                    <div class="form-group">
                        <label for="phone">Telefon Numarası</label>
                        <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" required placeholder="">
                    </div>
                </div>

                <div class="col-8">
                    <div class="form-group">
                        <label for="email">Email adress</label>
                        <input type="email" class="form-control" id="Email" name="Email" required placeholder="">
                    </div>
                </div>
            </div>

            <label class="mt-2 mb-1" for="newsletter">Bilgilendirme E-maili almak ister misiniz?</label>
            <div class="checkbox">

                <label>
                    <input type="checkbox" value="Sure!" id="emailPermission"> Almak İstiyorum!
                </label>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
    <!--İnsurances-->
    <div id="insurances" class="container">
        <div class="row">
            <a  class="icon col-3" >
                <ion-icon name="car"></ion-icon>
                <p>Trafik Sigortası</p>
            </a>
            <a class="icon col-3" >
                <ion-icon name="shield-checkmark-outline"></ion-icon>
                <p>kasko</p>
            </a>
            <a class="icon col-3" >
                <ion-icon name="medkit-outline"></ion-icon>
                <p>Tamamlayıcı Sağlık Sigortası</p>
            </a>
            <a class="icon col-3" >
                <ion-icon name="home"></ion-icon>
                <p>Dask</p>
            </a>

        </div>
    </div>
    <!--Maps-->
    <div class="container">
        <div class="row">
            <div class="col-xxl-6">
                <h2 class="mb-5">İstanbul-Göztepe Merkezimiz</h2>
				<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.578114524766!2d29.072933915373714!3d40.99071807930259!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac7c6ab4ffaf7%3A0x53b36169a9ba0627!2zR8O2enRlcGUsIEJvcmEgU2suIE5pZGEgS3VsZSBQbGF6YSBObzoxLCAzNDczMiBLYWTEsWvDtnkvxLBzdGFuYnVs!5e0!3m2!1sen!2str!4v1661243615854!5m2!1sen!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
			</div>
            <div class="col-xxl-6">
                <h2 class="mb-5">İstanbul-Nişantaşı Bayimiz</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12035.773728515544!2d28.98569148668941!3d41.0483661187458!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab708f402e7ab%3A0x81f56e7dbf2437c2!2zTmnFn2FudGHFn8SxLCBUZcWfdmlraXllLCDFnmnFn2xpL8Swc3RhbmJ1bA!5e0!3m2!1sen!2str!4v1640371551559!5m2!1sen!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>

</body>
</html>

