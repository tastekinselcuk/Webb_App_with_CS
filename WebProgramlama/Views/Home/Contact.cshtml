	<style>
		body {
			background-color: #F5F7F9;
			overflow: visible;
			overflow-x: hidden;
		}

		.container {
			margin-top: 110px !important;
            margin-bottom:50px;
		}

		#iletisimBaslık {
			font-size: 45px;
			margin-bottom: 50px;
			color: #1d1e1e;
		}

		.col-12 {
			border-width: 4px;
			border-color: red;
		}

		.message {
			padding: 30px;
		}

	</style>
</head>
<body>
<div id="form" class="container">
    <form  >
        <h2 id="iletisimBaslık">BİZİMLE İLETİŞİME GEÇİN</h2>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="first">Ad</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required placeholder="">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label for="last">Soyad</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" required placeholder="">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label for="email">Email adress</label>
                    <input type="text" class="form-control" id="email" name="email" required placeholder="">
                </div>
            </div>
            <div class="col-12">

                <div class="form-group">
                    <label for="phone">Telefon Numarası</label>
                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" required placeholder="">
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    <label for="message">Mesajınız</label>
                    <input type="text" class="message form-control" id="message" name="message" required placeholder="">
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>
