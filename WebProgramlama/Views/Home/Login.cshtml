@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html xmlns:th="http://thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.2/dist/js/bootstrap.bundle.min.js"></script>
    <!--CSS-->
    <link href="uygulamam.css" rel="stylesheet" type="text/css" />
    <!--Ajax-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" rel="stylesheet" />
    <!--Jquery-->
    <script data-require="jquery@2.0.3" data-semver="2.0.3" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
    <!--Vue.js-->
    <script src="https://cdn.jsdelivr.net/npm/vue@2"></script>
    <script src="https://unpkg.com/vue@next"></script>
    <!--Font Awesome İcon-->
    <script src="https://kit.fontawesome.com/fabe986639.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f5f7f9;
        }

        .container {
            margin-top: 70px;
            margin-bottom: 80px;
        }

        h1 {
            margin-bottom: 70px;
            text-align: center;
            color: #1d1e1e;
            font-size: 45px !important;
            text-shadow: 2px 7px 5px rgba(0,0,0,0.3), 0px -4px 10px rgba(255,255,255,0.3);
        }

        .login {
            opacity: 0.9;
            background-color: #e5eaef;
            border-radius: 5px;
        }

        .register {
            opacity: 0.9;
            background-color: #e5eaef;
            border-radius: 5px;
        }

        .linkIcon {
            border-radius: 100px;
            background-color: #eaeef2;
        }
    </style>
</head>
<body>
    <div id="app">
        <div class="container">
            <div class="row">
                <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                    <h1>Güvende Sigorta</h1>

                    <!-- Pills navs -->
                    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                        <li class="login nav-item" role="presentation">
                            <a class="nav-link" :class="[isActive ? 'active' : '']" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                               aria-controls="pills-login" aria-selected="true">Giriş Yap</a>
                        </li>
                        <li class="register nav-item" role="presentation">
                            <a class="nav-link" :class="[!isActive ? 'active' : '']" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                               aria-controls="pills-register" aria-selected="false">Kayıt Ol</a>
                        </li>
                    </ul>
                    <!-- Pills navs -->
                    <!-- Pills content -->
                    <div class="tab-content">
                        <div class="tab-pane fade show " :class="[isActive ? 'active' : '']" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                            <form method="post">
                                <div class="text-center mb-3">
                                    <p>Şununla giriş yap:</p>
                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-facebook-f"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-google"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-twitter"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>

                                <p class="text-center">veya:</p>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="loginName" class="form-control" placeholder="TC Kimlik No" />
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="loginPassword" class="form-control" placeholder="Şifre" />
                                </div>

                                <!-- 2 column grid layout -->
                                <div class="row mb-4">
                                    <div class="col-md-6 d-flex justify-content-center">
                                        <!-- Checkbox -->
                                        <div class="form-check mb-3 mb-md-0">
                                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                                            <label class="form-check-label" for="loginCheck"> Beni hatırla </label>
                                        </div>
                                    </div>

                                    <div class="col-md-6 d-flex justify-content-center">
                                        <!-- Simple link -->
                                        <a href="#!">Şifrenizi mi unuttunuz?</a>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">Giriş Yap</button>

                                <!-- Register buttons -->
                                <div class="text-center">
                                    <p>Kayıtlı değil misin? <a href="#!">Kayıt ol</a></p>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade show" :class="[!isActive ? 'active' : '']" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                            <form>
                                <div class="text-center mb-3">
                                    <p>Şununla Kayıt ol:</p>
                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-facebook-f"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-google"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-twitter"></i>
                                    </button>

                                    <button type="button" class="btn linkIcon btn-link btn-floating mx-1">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>

                                <p class="text-center">veya:</p>

                                <!-- Name input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="registerName" class="form-control" placeholder="Ad" required />
                                </div>

                                <!-- Username input -->
                                <div class="form-outline mb-4">
                                    <input type="text" id="registerUsername" class="form-control" placeholder="Soyad" required />
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="registerEmail" class="form-control" placeholder="Email" required />
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="registerPassword" class="form-control" placeholder="Şifre" required />
                                </div>

                                <!-- Repeat Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="registerRepeatPassword" class="form-control" placeholder="Şifreyi tekrar giriniz" required />
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck"
                                           aria-describedby="registerCheckHelpText" required />
                                    <label class="form-check-label" for="registerCheck">Sözleşmeyi okudum ve kabul ediyorum</label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-3">Kayıt Ol</button>
                            </form>
                        </div>
                    </div>
                    <!-- Pills content -->
                </div>
            </div>
        </div>
    </div>

    <script>


        /*vue da bir değişken tanımlamak için data() bölümü
        bu dataları methodlarda kullanmak için ise methods:
        bölümü kullanılır.Vue.js in genel yapısı aşağıdaki gibidir*/

        const app = Vue.createApp({ //sabit bir vue elemanı oluşturulur
            data() { //istenen değişkenler burada oluşturulur
                return {
                    input: "vue girdisi",
                    count: 0,
                    isActive: true,
                    inp: {
                        type: "text",
                        id: "vueInput",
                        name: "vue",
                    },
                    coords: {
                        x: 0,
                        y: 0,
                    }
                };
            },
            methods: {  //metodlar yazmak için kullanılır
                changeStatus() {
                    this.isActive = !this.isActive;
                },
                updateCordinats(mesaj, event) {
                    console.log(mesaj, event.x, event.y);
                    this.coords = { //data kısmında oluşturulan değişenlere erişmek için this keyword'ü kullanılır.(methodları diğer methodlar içerisinde kullanmak istersek de methıd içinde this ile çağırabiliriz)
                        x: event.x,
                        y: event.y,
                    }
                },
            },
        }).mount("#app") //kullanmak istediğimiz kısmı burada belirtiyoruz(örnkte app adlı id'nin içindeki elemanlar kullanılmak istenmiş)

    </script>
</body>
</html>
